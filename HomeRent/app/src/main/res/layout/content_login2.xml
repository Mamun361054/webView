<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bk"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">





    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_below="@+id/layy1"
        android:layout_width="fill_parent"
        android:scrollbars="none"
        android:layout_height="fill_parent" >


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="30dp"
            android:orientation="vertical" >
            <LinearLayout
                android:id="@+id/lay11"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:elevation="2dp"
                android:layout_marginTop="25dp"
                android:layout_marginBottom="25dp"
                android:orientation="vertical">





                <TextView
                    android:id="@+id/forgotp"
                    android:layout_width="match_parent"
                    android:layout_height="70dp"

                    android:gravity="center"
                    android:textSize="20dip"
                    android:text="Already Have Renter \naccount? login bellow!"
                    android:textColor="#f4450b"

                    android:textStyle="bold" />


            </LinearLayout>

            <LinearLayout
                android:id="@+id/lay5"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:elevation="2dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginBottom="10dp"
                android:paddingLeft="2dp"

                android:background="#cc55d2"
                android:orientation="horizontal">


                <ImageView
                    android:id="@+id/img8"
                    android:layout_width="60dp"
                    android:layout_height="60dp"



                    android:layout_marginRight="2dp"

                    android:scaleType="fitCenter"
                    android:src="@drawable/rmail"/>
                <EditText
                    android:layout_width="fill_parent"
                    android:layout_height="60dp"
                    android:textSize="15dp"
                    android:inputType="textEmailAddress"

                    android:background="@drawable/edit"
                    android:textColor="#2724f1"
                    android:layout_toRightOf="@+id/img5"


                    android:padding="10dp"
                    android:textColorHint="#8b8686"
                    android:id="@+id/email"
                    android:textStyle="bold"
                    android:hint="Email@email.com"

                    android:autoText="true" />


            </LinearLayout>
            <!-- password input -->

            <LinearLayout
                android:id="@+id/lay2"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:elevation="2dp"
                android:background="#cc55d2"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginBottom="5dp"
                android:paddingLeft="2dp"

                android:orientation="horizontal">


                <ImageView
                    android:id="@+id/img6"
                    android:layout_width="60dp"
                    android:layout_height="60dp"


                    android:layout_marginRight="2dp"

                    android:scaleType="fitCenter"
                    android:src="@drawable/pass"
                    />

                <EditText
                    android:layout_width="fill_parent"
                    android:layout_height="60dp"
                    android:textSize="15dp"

                    android:textColorHint="#8b8686"
                    android:layout_toRightOf="@+id/img6"

                    android:padding="10dp"
                    android:textColor="#2724f1"
                    android:background="@drawable/edit"
                    android:id="@+id/password"
                    android:hint="password"
                    android:textStyle="bold"
                    android:inputType="text" />

            </LinearLayout>


            <LinearLayout
                android:id="@+id/lay41"
                android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:elevation="2dp"

                android:paddingLeft="2dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:text="Remember Me"
                    android:layout_gravity="left"
                    android:gravity="center"
                    android:textSize="15dip"
                    android:textColor="#7e7d7d"
                    android:background="#f2f2f2"
                    android:layout_weight="1"
                    android:id="@+id/radioButton" />

                <Button android:id="@+id/re"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:text="Forget Password?"
                    android:background="#f2f2f2"

                    android:paddingLeft="5dp"
                    android:layout_gravity="right"
                    android:gravity="center"
                    android:textStyle="normal"
                    android:textSize="15dip"
                    android:onClick="savedata"
                    android:layout_weight="1"
                    android:textColor="#3756ac"/>


            </LinearLayout>




            <LinearLayout
                android:id="@+id/lay4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:elevation="2dp"
                android:layout_gravity="center"
                android:layout_marginRight="15dp"
                android:layout_marginLeft="15dp"
                android:layout_marginBottom="15dp"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:paddingLeft="2dp"
                android:paddingRight="2dp"
                android:orientation="horizontal">

                <Button android:id="@+id/btnRegister"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:text="Sign In"
                    android:textStyle="bold"
                    android:textSize="25dip"

                    android:background="#cc55d2"
                    android:textColor="#000000"/>


            </LinearLayout>





            <LinearLayout
                android:id="@+id/lay44"
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:elevation="2dp"
                android:layout_gravity="bottom"
                android:gravity="center"
                android:orientation="horizontal">


                <TextView
                    android:layout_width="wrap_content"
                    android:text="Don't Have Any Account?"
                    android:textColor="#7e7d7d"

                    android:textSize="15dp"
                    android:background="#f2f2f2"
                    android:layout_weight="1"
                    android:scaleType="fitCenter"
                    android:gravity="center"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="2dp"
                    android:textStyle="normal"
                    android:onClick="reg"
                    android:clickable="true"
                    android:paddingLeft="10dp"
                    android:id="@+id/tex"
                    android:layout_height="fill_parent" />
                <Button
                    android:layout_width="80dp"
                    android:textColor="#165696"
                    android:text="Sign up"
                    android:textSize="20dp"
                    android:background="#f2f2f2"
                    android:layout_weight="1"
                    android:paddingRight="50dp"
                    android:scaleType="fitCenter"
                    android:gravity="center"
                    android:layout_marginTop="10dp"


                    android:id="@+id/signup"

                    android:layout_height="80dp" />


            </LinearLayout>
        </LinearLayout>



    </ScrollView>

</LinearLayout>
